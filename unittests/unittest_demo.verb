( https://rosettacode.org/wiki/Rot-13 )

: rot13-char ( string -- rot13 of first char of string )
	ord
	dup 65 >=
	over 90 <=
	and if >>upper 

	dup 97 >=
	over 122 <=
	and if >>lower

	( not alphabetic, return as is )
	chr return

	@upper ( ord )
		13 + dup 90 <= if >>done
		26 - >>done ( wrap around )
	@lower ( ord )
		13 + dup 122 <= if >>done
		26 - >>done ( wrap )
	@done chr return
	;

