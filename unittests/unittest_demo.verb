( - https://rosettacode.org/wiki/Primality_by_trial_division - )

: prime? ( n -- true|false )
	dup 1 <= if >>below2
	dup 2 == if >>is2

	dup 2 / 2 swap ( n i=2 stop=n/2 )
	@loop ( n i stop )
			\ "LOOP:" . .S CR
		-rot 2dup mod 0 == if >>notprime
		1 + rot ( n i+1 stop )
		2dup >= if >>isprime
		<<loop
	@notprime ( stop n i )
		drop drop drop false return
	@isprime ( n i stop )
		drop drop drop true return
	@below2 
		drop false return
	@is2
		drop true return
	;

"* primes *" . CR
