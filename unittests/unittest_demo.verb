: to-upper ( string -- first char of string as uppercase [unchanged if not alphabetic] )
	ord
	dup 97 < if >>not-lower
	dup 122 > if >>not-lower
	32 - chr return
	@not-lower chr
	;

: to-lower ( string -- first char of string as uppercase [unchanged if not alphabetic] )
	ord
	dup 65 < if >>not-upper
	dup 90 > if >>not-upper
	32 + chr return
	@not-upper chr
	;

