: test-logical-ops 
	true true and expectTrue
	true false and expectFalse
	false true and expectFalse
	false false and expectFalse
	
	true true or expectTrue
	true false or expectTrue
	false true or expectTrue
	false false or expectFalse
	
	true not expectFalse
	false not expectTrue
	;
	